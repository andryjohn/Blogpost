<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <div id="title" style="font-size: 30px" "margin: auto;"><%= post.title %></div>
        <div class="container" style="font-size: 22px"><%= post.content %></div>
        <div class="btn btn-light"><%= link_to 'read storie', post %></div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn btn-light float-right"><%= link_to 'New Post', new_post_path %></div>
